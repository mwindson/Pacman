{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noStrictGenericChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib", ".tmp", "build"]
}
